{
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        ".clang-format": "yaml",
        ".config": "shellscript",
        ".gitignore": "ignore",
        ".vscode/*.json": "jsonc",
        "*.config": "makefile",
        "*.cwaps1": "powershell",
        "*.dts": "dts",
        "*.dtsi": "dts",
        "*.html": "html",
        "*.scc": "makefile",
        "*.sh.tmpl": "jinja-shell",
        "*.txt": "plaintext",
        "**/.ssh/*": "ssh_config",
        "requirements*.txt": "pip-requirements",
        "setup.cfg": "ini",
        "ssh_config": "ssh_config",
        "cstdint": "cpp",
        "__config": "cpp",
        "cstdio": "cpp",
        "ratio": "cpp",
        "locale": "cpp",
        "type_traits": "cpp",
        "complex": "cpp"
    },

    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [100, 120],

    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.loggingLevel": "Information",

    "[c]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cuda-cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    "[python]": {
        "editor.wordBasedSuggestions": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.analysis.include": ["./src", "./scripts", "./tests"],
    "terminal.integrated.env.linux": {
        "CUDA_HOME": "/usr/local/cuda",
        "PATH": "/usr/local/cuda/bin:${env:PATH}"
    },

    "python.formatting.provider": "none",
    "black-formatter.args": [
        "--line-length=110",
        "--config=${workspaceFolder}/pyproject.toml"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "ruff.enable": true,
    "ruff.args": ["--line-length=110", "--extend-ignore=F401,F841,E501"],

    "[json]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.tabSize": 2
    },

    "[toml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.tabSize": 2,
        "editor.rulers": [80, 100]
    },
    "evenBetterToml.formatter.columnWidth": 88,

    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.tabSize": 2
    },
    "yaml.format.printWidth": 110,

    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },

    "css.lint.validProperties": ["dock", "content-align", "content-justify"],
    "[css]": {
        "editor.formatOnSave": true
    },

    "remote.autoForwardPorts": false,
    "remote.autoForwardPortsSource": "process",
    "C_Cpp.default.compilerPath": "/usr/bin/clang-15"
}
